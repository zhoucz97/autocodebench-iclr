ExUnit.start()
defmodule AssertExamples do
  use ExUnit.Case
  
  test "various assertions" do
    # 基本相等断言
    assert 1 + 1 == 2
    
    # 不等断言
    refute 1 + 1 == 3
    
    # 模式匹配断言
    assert {:ok, result} = {:ok, 42}
    assert result == 42
    
    # 异常断言
    assert_raise ArithmeticError, fn ->
      1 / 0
    end
    
    # 列表包含断言
    assert 2 in [1, 2, 3]
    
    # 近似相等（浮点数）
    assert_in_delta 0.1 + 0.2, 0.3, 0.001
  end
end
